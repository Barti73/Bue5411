{% extends 'base_frontend.html.twig' %}

{% block body %}

<main>

	<div class="row"></div>
	<div class="row" style="margin-top: 10px !important;">
		<div class="col s8 offset-s2">
			<div class="card">
				<div class="card-content">
					<div class="titleNews">{{ newsData.noticiaData.titulo }}</div>
					<!--<div class="copeteTxt">lorem ipsum dolor sit amet consectetur adipiscing elit sed</div>-->
					{% if newsData.noticiaData.imagen %}
					<div><img src="{{ asset('bundles/public/upload/news/') }}{{ newsData.noticiaData.imagen }}" style="" width="100%"></div>
					{% endif %}
					<div>
						<ul class="share-buttons">
							<li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fnoticias%23.com&t=" title="Share on Facebook" target="_blank" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&t=' + encodeURIComponent(document.URL)); return false;"><img alt="Share on Facebook" src="{{ asset('bundles/public/images/Facebook.png') }}"></a></li>
							<li><a href="https://twitter.com/intent/tweet?source=http%3A%2F%2Fnoticias%23.com&text=:%20http%3A%2F%2Fnoticias%23.com" target="_blank" title="Tweet" onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL)); return false;"><img alt="Tweet" src="{{ asset('bundles/public/images/Twitter.png') }}"></a></li>
							<li><a href="mailto:?subject=&body=:%20http%3A%2F%2Fnoticias%23.com" target="_blank" title="Send email" onclick="window.open('mailto:?subject=' + encodeURIComponent(document.title) + '&body=' +  encodeURIComponent(document.URL)); return false;"><img alt="Send email" src="{{ asset('bundles/public/images/Email.png') }}"></a></li>
						</ul>
					</div>	
					<div class="divider"></div>
					<div>
						<p class="">{{ newsData.noticiaData.texto|raw }}</p>
						<blockquote><b>{{ newsData.noticiaData.autor }}</b></blockquote>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row"></div>
	<div class="row"></div>
	<div class="row"></div>
	<div class="row"></div>
	<div class="row"></div>
	
</main>
  
<script>

</script>		
	
{% endblock %}