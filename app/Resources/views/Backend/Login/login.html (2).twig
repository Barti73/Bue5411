<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}HeroGym{% endblock %}</title>
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		
        <script src="{{ asset('bundles/public/js/jquery-1.11.3.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/public/js/common_functions.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/public/custom_alert/jquery.alerts.js') }}" type="text/javascript"></script>
		<script src="{{ asset('bundles/public/js/main.js') }}" type="text/javascript"></script>
		<link rel="stylesheet" href="{{ asset('bundles/public/css/style.css') }}" type="text/css" >
		<link rel="stylesheet" href="{{ asset('bundles/public/custom_alert/jquery.alerts.css') }}" type="text/css" >
    </head>
    <body class="normal">
        <div id="taskbar">
            {% block title2 %}{% endblock %}
        </div>
    
		{% block body %}

		<div id="content">

		<form id="frmLogin" method="post" action="{{formAction}}">

		<div id="appLogo"></div>

		<br/><br/>

		<table class="tableLogin" border='0' align='center' cellpadding='1' cellspacing='1'>
		<tr>
		  <td width='100%' align="center">
			<span class="spanTitle">HeroGym<br/>.: Control de Acceso :.</span>
			<div><hr></div>
		  </td>
		</tr>

		<tr>
		<td width='100%' valign="top">

		   <table width='30%' border='0' align='center' cellpadding='1' cellspacing='1' >
		   <tr>
			  <td width='50%'>
				  <b><font class="loginLabel">Login:&nbsp;</font></b>
			  </td>
			  <td width='50%'>
				<input class="txtLogin" type='text' id='txtUser' name='txtUser' value='' size='20' >
			  </td>
		   </tr>
		   <tr>
			  <td width='50%'>
				  <b><font class="loginLabel">Password:&nbsp;</font></b>
			  </td>
			  <td width='50%'>
				<input class="txtLogin" type='password' id='txtPass' name='txtPass' value='' size='20'>
			  </td>
		   </tr>
		   <tr class="CeldaTxtBuscar">
			  <td width='100%' align='center' colspan='2'>
				  <br/><br/><input type='button' class="css_btn_class" name='btnLogin' value='Ingresar' onClick='FxValidaLogin();'>
			  </td>
		   </tr>
		   <tr>
			  <td width='100%' align='center' colspan='2'>
				  &nbsp;
			  </td>
		   </tr>
		   </table>

		</td>
		</tr>
		</table>

		<input type='hidden' id='notExists' name='notExists' value='{{notExists}}'>

		</form>

		</div>

		<script language="JavaScript" type="text/javascript">
		$(document).ready(function(){
			$('#txtUser').focus();
			if ($('#notExists').val())
			{
				customAlert('sInfo', 'Usuario o password incorrecto.', 0);
				$('#notExists').val('');
			}
		});
		</script>
		{% endblock %}

    </body>
</html>

