<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bue54{% endblock %}</title>

        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/public/css/materialize.css') }}"  media="screen,projection"/>
        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/public/css/custom.css') }}"  media="screen,projection"/>
        <!-- Sweet Alert CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/public/lib/sweetalert-master/dist/sweetalert.css') }}" />        
        
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/public/img/favicon.ico') }}?v=2" />
        
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <!-- Materialize -->
        <script src="{{ asset('bundles/public/js/Materialize/materialize.min.js') }}" type="text/javascript"></script>
		<!-- Common -->
        <script src="{{ asset('bundles/public/js/Common/common_functions.js') }}" type="text/javascript"></script>
		<!-- Login -->
        <script src="{{ asset('bundles/public/js/Login/login.js') }}" type="text/javascript"></script>
        <!-- Sweet Alert -->
        <script src="{{ asset('bundles/public/lib/sweetalert-master/dist/sweetalert.min.js') }}" type="text/javascript"></script>
		
    </head>

    <body>
  
		<main>
			<div class="navbar-fixed">
				<nav class="blue darken-3">
					<div class="nav-wrapper">
						<a href="#" class="brand-logo center"><b>Noticias</b> Online</a>
					</div>
				</nav>
			</div>
			<div class="container">
				<br>
				<div class="row">
					<div class="section">
						<div class="col s12 l4 offset-l4 ">
							<div class="card">
								<div class="card-content">
									<h5 class="center">Iniciar sesión</h5>
									<div class="divider"></div>
									<div class="row">
										<div class="section">
											<form class="col s12">
												<div class="row">
													<div class="input-field col s12">
														<i class="material-icons prefix">account_circle</i>
														<input id="icon_prefix" type="text" class="validate">
														<label for="icon_prefix">Usuario</label>
													</div>
													<div class="input-field col s12">
														<i class="material-icons prefix">vpn_key</i>
														<input id="icon_telephone" type="password" class="validate">
														<label for="icon_telephone">Contraseña</label>
													</div>
												</div>
											</form>
										</div>
									</div>
									<div class="row">  
										<div class="col s12 center">									
											<a class="waves-effect waves-light btn black">Aceptar</a>
										</div>	
									</div>	
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	  
		<footer class="page-footer blue darken-3">
			<div class="footer-copyright">
				<div class="container center">© 2017 Bue54 Copyright</div>
			</div>
		</footer>	  
	</body>
	
	<script>
		$(document).ready(function(){
		 $('.parallax').parallax();
		 $(".dropdown-button").dropdown();
		 $('select').material_select();
		 $('.slider').slider({full_width: true, indicators: false});
		 $('.tooltipped').tooltip({delay: 50});
		 $('.collapsible').collapsible();
		 $('.carousel.carousel-slider').carousel({full_width: true});
		 $(".button-collapse").sideNav();
		});       
	</script>

	<script>
	</script>		
	
</html>