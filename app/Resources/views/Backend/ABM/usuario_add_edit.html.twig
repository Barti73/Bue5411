{% extends 'base_popup.html.twig' %}

{% block body %}

<script src="{{ asset('bundles/public/js/abm.js') }}" type="text/javascript"></script>

<div id="content" class="body_abm">

<center>
<form id="frmUsuarioAddEdit" method="post" action="{{urlUsuarioSave}}">

<br/><br/>
<table width="80%" cellpadding="1" cellspacing="1" border="0">
    <tr>
        <td align="center"><span class="titleAddEdit">{{titulo}} Usuario</span></td>
    </tr>
</table>
<br/>

<table width="80%" cellpadding="1" cellspacing="1" border="0">
    <tr class="CeldaTxtBuscar">
        <td>Nombre (*):</td>
        <td><input type="text" size="50" maxlength="50" id="txtNombre" name="txtNombre" value="{{strNombre}}"/></td>
    </tr>
    <tr class="CeldaTxtBuscar">
        <td>Username (*):</td>
        <td><input type="text" size="50" maxlength="50" id="txtUsername" name="txtUsername" value="{{strUsername}}"/></td>
    </tr>
    <tr class="CeldaTxtBuscar">
        <td>Password (*):</td>
        <td><input type="password" size="50" maxlength="50" id="txtPassword" name="txtPassword" value=""/>{{blankPass|raw}}</td>
    </tr>
    <tr class="CeldaTxtBuscar">
        <td>Re-Password (*):</td>
        <td><input type="password" size="50" maxlength="50" id="txtPasswordConfirm" name="txtPasswordConfirm" value=""/></td>
    </tr>
	<tr class="CeldaTxtBuscar">
		<td>Perfil (*):</td>
		<td align="left">
			<span class="CeldaTxtBuscar">
			<input type="radio" class="classRadio" name="rdPerfil" value="1" {{checkedAdministrador}} />Administrador&nbsp;
			<input type="radio" class="classRadio" name="rdPerfil" value="2" {{checkedUsuario}} />Usuario&nbsp;
			</span>
		</td>
	</tr>
    <tr class="CeldaTxtBuscar">
        <td>Activo:</td>
        <td><input type="checkbox" class="classCheckbox" id="chkActivo" name="chkActivo" {{chkActivo}} value="" onclick="FxSetCheckBox();"/></td>
    </tr>
</table>
<br/><br/>
<table width="80%" cellpadding="1" cellspacing="1" border="0">
    <tr>
        <td align="center">
            <input class="css_btn_class_dark" type="button" value="Grabar" name="btnSave" id="btnSave" onclick="FxSaveUsuarioJS();"/>
            <input class="css_btn_class_dark" type="button" value="Cerrar" name="btnClose" id="btnClose" onclick="javascript: window.close();"/>
        </td>
    </tr>
</table>

<input type="hidden" id="txtUsuarioId" name="txtUsuarioId" value="{{usuarioId}}"/>
<div id="div_null"></div>

<script type="text/javascript">
FxSetCheckBox();
{{FxCallback|raw}}
</script>

</form>
</center>

</div>

{% endblock %}
