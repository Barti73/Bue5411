{% extends 'base.html.twig' %}

{% block body %}

<!-- Login -->
<script src="{{ asset('bundles/public/js/Backend/login.js') }}" type="text/javascript"></script>

<body>

	<main>
		<div class="navbar-fixed">
			<nav class="pink darken-3">
				<div class="nav-wrapper">
					<a href="{{ arrayUrlAjax.UrlLogin }}" class="brand-logo center"><img src="{{ asset('bundles/public/images/logo.png') }}"></a>
				</div>
			</nav>
		</div>
		<div class="container">
			<br>
			<div class="row">
				<div class="section">
					<div class="col s12 l4 offset-l4 ">
						<div class="card">
							<div class="card-content">
								<h5 class="center">Iniciar sesión</h5>
								<div class="divider"></div>
								<div class="row">
									<div class="section">
										<form class="col s12">
											<div class="row">
												<div class="input-field col s12">
													<i class="material-icons prefix">account_circle</i>
													<input id="txtUser" type="text" class="validate">
													<label for="txtUser">Usuario</label>
												</div>
												<div class="input-field col s12">
													<i class="material-icons prefix">vpn_key</i>
													<input id="txtPass" type="password" class="validate">
													<label for="txtPass">Contraseña</label>
												</div>
											</div>
										</form>
									</div>
								</div>
								<div class="row">  
									<div class="col s12 center">									
										<a href="javascript: void(0);" class="waves-effect waves-light btn black" onclick="javascript:FxLogin();">Aceptar</a>
									</div>	
								</div>	
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="divLoading"></div>
		<div id="divResponse" class="hide"></div>
		<input id="UrlNews" name="UrlNews" type="hidden" value="{{ arrayUrlAjax.UrlNews }}">
		<input id="UrlAjaxLoginCheck" name="UrlAjaxLoginCheck" type="hidden" value="{{ arrayUrlAjax.UrlAjaxLoginCheck }}">
	</main>
  
</body>

<script>
$(document).ready(function()
{
	$(document).bind('keydown', function(event)
	{
		if(event.which == '13')
		{
			FxLogin();
		}
	});
});
</script>


{% endblock %}